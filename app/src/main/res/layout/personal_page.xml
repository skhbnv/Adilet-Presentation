<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#606C77"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/avatar_background" />

    <TextView
        android:id="@+id/personal_page_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:gravity="center_horizontal"
        android:maxLines="1"
        android:text="Имя + Фамилия"
        android:textColor="#FFFFFF"
        android:textColorHint="#DBDEE0"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/edit_text_form"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/personal_page_stazh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="left"
                    android:maxLines="1"
                    android:text="Стаж работы: "
                    android:textColor="#FFFFFF"
                    android:textColorHint="#DBDEE0"
                    android:textSize="20sp" />

                <View
                    android:layout_width="320dp"
                    android:layout_height="1dp"
                    android:layout_marginBottom="20dp"
                    android:background="#ffffff" />

                <TextView
                    android:id="@+id/personal_page_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                   android:layout_marginBottom="5dp"
                    android:gravity="left"
                    android:maxLines="1"
                    android:text="Номер сертификата:"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#DBDEE0"
                    android:textSize="20sp" />

                <View
                    android:layout_width="320dp"
                    android:layout_height="1dp"
                    android:layout_marginBottom="20dp"
                    android:background="#ffffff" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <Button
        android:id="@+id/registrate"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/button_form"
        android:gravity="center"
        android:orientation="vertical"
        android:text="Записаться"
        android:textColor="#ffffff"
        android:textSize="22sp"></Button>
</LinearLayout>