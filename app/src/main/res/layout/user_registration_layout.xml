<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#203141"
    >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >

        <LinearLayout
            android:gravity="center"
            android:layout_width="329dp"
            android:layout_height="54dp"
            android:orientation="vertical"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="22dp"
            android:background="@drawable/edit_text_form">

            <EditText
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="Имя"
                android:paddingLeft="15dp"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:textColor="#FFFFFF"
                android:textColorHint="#DBDEE0"
                android:textSize="20sp" />


        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="329dp"
            android:layout_height="54dp"
            android:orientation="vertical"
            android:layout_marginBottom="22dp"
            android:background="@drawable/edit_text_form">

            <EditText
                android:id="@+id/user_surname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="Фамилия"
                android:paddingLeft="15dp"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:textColor="#FFFFFF"
                android:textColorHint="#DBDEE0"
                android:textSize="20sp" />

        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="329dp"
            android:layout_height="54dp"
            android:orientation="vertical"
            android:layout_marginBottom="22dp"
            android:background="@drawable/edit_text_form">

            <EditText
                android:id="@+id/user_registration_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="Email"
                android:paddingLeft="15dp"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:textColor="#FFFFFF"
                android:textColorHint="#DBDEE0"
                android:textSize="20sp" />

        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="329dp"
            android:layout_height="54dp"
            android:orientation="vertical"
            android:layout_marginBottom="22dp"
            android:background="@drawable/edit_text_form">

            <EditText
                android:id="@+id/user_registration_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="Пароль"

                android:paddingLeft="15dp"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textColor="#FFFFFF"
                android:textColorHint="#DBDEE0"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="329dp"
            android:layout_height="54dp"
            android:orientation="vertical"
            android:layout_marginBottom="44dp"
            android:background="@drawable/edit_text_form">

            <EditText
                android:id="@+id/user_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="Подтвердить"
                android:paddingLeft="15dp"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textColor="#FFFFFF"
                android:textColorHint="#DBDEE0"
                android:textSize="20sp" />

        </LinearLayout>

        <Button
            android:id="@+id/reg_but"
            android:gravity="center"
            android:layout_width="329dp"
            android:layout_height="54dp"
            android:orientation="vertical"
            android:layout_marginBottom="18dp"
            android:text="Зарегистрироваться"
            android:textColor="#ffffff"
            android:background="@drawable/button_form">
        </Button>



    </LinearLayout>
</ScrollView>